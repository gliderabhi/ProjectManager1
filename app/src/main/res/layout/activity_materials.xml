<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".Materials">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Expenditure "
                android:id="@+id/headerToop"
                android:textSize="19dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l1"
                android:layout_below="@+id/headerToop"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:text="Site name "
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sitename"
                    android:layout_width="200dp"
                    android:text="Names"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:layout_below="@+id/l1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:text="Shop name  : "
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ShopNameSpinner"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
    <RelativeLayout
        android:id="@+id/billImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_marginTop="20dp">
       <LinearLayout
           android:id="@+id/textField"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:text="Bill Image : "
               android:textSize="18dp"
               />
           <ImageButton
               android:id="@+id/billButton"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginLeft="100dp"
               android:background="@drawable/drawing"/>

       </LinearLayout>
        <ImageView
            android:id="@+id/ImagePreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/textField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/drawing"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>